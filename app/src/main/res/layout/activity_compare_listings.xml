<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">


    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:elevation="2dp">

        <TextView
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â†"
            android:textSize="20sp"
            android:padding="4dp"
            android:contentDescription="Go back" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Compare Listings"
            android:textSize="18sp"
            android:textStyle="bold"
            android:paddingStart="8dp"
            android:textColor="#111827" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="24dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/txtEmptyTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No listings selected"
            android:textSize="16sp"
            android:textColor="#111827" />

        <TextView
            android:id="@+id/txtEmptySubtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add up to 3 listings to compare"
            android:textSize="14sp"
            android:textColor="#6B7280"
            android:layout_marginTop="4dp" />

        <Button
            android:id="@+id/btnBrowseEmpty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse Listings"
            android:layout_marginTop="16dp"
            android:backgroundTint="#4CAF50"
            android:textColor="#FFFFFF" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/contentState"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:background="#F9FAFB">

        <TextView
            android:id="@+id/txtSummaryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Quick Summary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:padding="16dp"
            android:textColor="#111827" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerListings"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp"
            android:clipToPadding="false" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="#FFFFFF"
        android:elevation="4dp">

        <Button
            android:id="@+id/btnAddMore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add More Listings"
            android:backgroundTint="#FFFFFF"
            android:textColor="#374151"
            android:stateListAnimator="@null"
            android:background="@drawable/bottom_button_background" />
    </LinearLayout>

</LinearLayout>
