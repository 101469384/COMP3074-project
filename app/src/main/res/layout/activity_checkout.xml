<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tvCheckoutHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Checkout"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#222222"
            android:paddingBottom="4dp" />

        <TextView
            android:id="@+id/tvCheckoutSubHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Review your booking and complete payment to confirm."
            android:textSize="14sp"
            android:textColor="#666666"
            android:paddingBottom="16dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_rounded"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/tvSummaryLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Booking Summary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#333333"
                android:paddingBottom="8dp" />

            <TextView
                android:id="@+id/tvCheckoutTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listing title"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="#222222" />

            <TextView
                android:id="@+id/tvCheckoutPricePerDay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="$0.00 / day"
                android:textSize="14sp"
                android:textColor="#555555"
                android:paddingTop="4dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvCheckoutQuantityLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantity"
                        android:textSize="13sp"
                        android:textColor="#777777" />

                    <TextView
                        android:id="@+id/tvCheckoutQuantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="15sp"
                        android:textColor="#333333"
                        android:paddingTop="2dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="end">

                    <TextView
                        android:id="@+id/tvCheckoutSubtotalLabel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Subtotal"
                        android:textSize="13sp"
                        android:textColor="#777777" />

                    <TextView
                        android:id="@+id/tvCheckoutSubtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#222222"
                        android:paddingTop="2dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>


        <TextView
            android:id="@+id/tvPaymentHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment Information"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_rounded"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <EditText
                android:id="@+id/etNameOnCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name on card"
                android:inputType="textPersonName"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:textColor="#222222"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/etCardNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Card number"
                android:inputType="number"
                android:maxLength="19"
                android:padding="10dp"
                android:background="@android:color/transparent"
                android:textColor="#222222"
                android:textColorHint="#AAAAAA"
                android:layout_marginBottom="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"
                android:layout_marginBottom="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/etExpiry"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="MM/YY"
                    android:inputType="text"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#222222"
                    android:textColorHint="#AAAAAA"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/etCvv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="CVV"
                    android:inputType="numberPassword"
                    android:maxLength="4"
                    android:padding="10dp"
                    android:background="@android:color/transparent"
                    android:textColor="#222222"
                    android:textColorHint="#AAAAAA" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tvCheckoutNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="This is a prototype checkout screen. Payment is simulated and no real charges are made."
            android:textSize="12sp"
            android:textColor="#777777"
            android:paddingBottom="16dp" />


        <Button
            android:id="@+id/btnConfirmBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Booking"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:background="@drawable/bg_primary_button"
            android:padding="12dp" />

        <Button
            android:id="@+id/btnCancelCheckout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:background="@android:color/transparent"
            android:textColor="#7A4EC9" />
    </LinearLayout>

</ScrollView>
